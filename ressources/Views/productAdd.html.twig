{% extends "@/base.html.twig" %}

{% block title %}Add a Product{% endblock %}

{% block body %}
    <h1>Add a Product</h1>
    <form action="/add/" method="post">
        <label for="name">Name :</label><input type="text" id="name" name="name" required /><br/>
        <label for="content">Content :</label><textarea type="text" id="content" name="content" required></textarea><br/>
        <input type="submit"/>
    </form>
{% endblock %}
