{% extends "@/base.html.twig" %}

{% block title %}Edition du produit{% endblock %}

{% block body %}
    <h1>Edition du produit : {{ product.name }}</h1>
    <form action="/admin/edit/{{ product.id }}" method="post">
        <label for="name">Name :</label><input type="text" id="name" name="name" value="{{ product.name }}" required /><br/>
        <label for="content">Content :</label><textarea id="content" name="content" required>{{ product.content }}</textarea><br/>
        <input type="submit"/>
    </form>
{% endblock %}